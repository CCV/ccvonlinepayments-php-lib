{
    "name": "ccv/php-lib",
    "description": "Payment PHP library used by the official CCV Payment Services plugins",
    "keywords": ["php", "library", "payments", "ccv"],
    "homepage": "https://github.com/CCV/ccvonlinepayments-php-lib",
    "license": "MIT",
    "type": "library",
    "version": "2.0.0",
    "require": {
        "php": ">=8.1.0",
        "ext-json": "*",
        "ext-curl": "*",
        "php-curl-class/php-curl-class": "^12",
        "brick/phonenumber": "^0.8",
        "psr/log": "^1|^2|^3"
    },
    "autoload": {
        "psr-4": {
            "CCVOnlinePayments\\Lib\\": "src/"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1"
    }
}
